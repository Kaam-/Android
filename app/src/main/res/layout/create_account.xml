<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#2b2b2b">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:id="@+id/applicationLogo"
            android:background="@drawable/header_2"
            android:layout_marginTop="40dp"
            android:drawingCacheQuality="high"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Social Networking for the Motivated Individual"
            android:textColor="#cacaca"
            android:typeface="serif"
            android:textSize="10dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="3dp"/>
        </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="2"
        android:orientation="vertical"
        android:paddingTop="5dp">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/rounded_rectangle_grey"
            android:padding="10dp">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:background="@drawable/person_icon"
                    android:layout_gravity="center_horizontal|center_vertical"/>
                <EditText
                    android:layout_width="220dp"
                    android:layout_height="wrap_content"
                    android:hint="Name"
                    android:text="Andrew Rubiano"
                    android:layout_gravity="center_horizontal|center_vertical"
                    android:layout_marginLeft="5dip"
                    android:layout_marginRight="5dip"
                    android:scrollHorizontally="true"
                    android:autoText="false"
                    android:inputType="textPersonName|textCapWords"
                    android:capitalize="none"
                    android:gravity="fill_horizontal"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textSize="12dp"
                    android:singleLine="true"
                    android:textColor="#96ca2d"
                    android:id="@+id/name"
                    android:typeface="serif"/>
                </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="18dp"
                    android:background="@drawable/email_icon"
                    android:layout_gravity="center_horizontal|center_vertical"/>
                <EditText
                    android:layout_width="220dp"
                    android:layout_height="wrap_content"
                    android:hint="Email"
                    android:text="aer10f.ar@gmail.com"
                    android:layout_gravity="center_horizontal|center_vertical"
                    android:layout_marginLeft="5dip"
                    android:layout_marginRight="5dip"
                    android:scrollHorizontally="true"
                    android:autoText="false"
                    android:inputType="textEmailAddress"
                    android:capitalize="none"
                    android:gravity="fill_horizontal"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textSize="12dp"
                    android:singleLine="true"
                    android:textColor="#96ca2d"
                    android:id="@+id/email"
                    android:typeface="serif"/>
                </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:background="@drawable/password_icon"
                    android:layout_gravity="center_horizontal|center_vertical"/>
                <EditText
                    android:layout_width="220dp"
                    android:layout_height="wrap_content"
                    android:hint="Password"
                    android:text="underoath1"
                    android:layout_gravity="center_horizontal|center_vertical"
                    android:layout_marginLeft="5dip"
                    android:layout_marginRight="5dip"
                    android:scrollHorizontally="true"
                    android:autoText="false"
                    android:inputType="textPassword"
                    android:capitalize="none"
                    android:gravity="fill_horizontal"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textSize="12dp"
                    android:singleLine="true"
                    android:textColor="#96ca2d"
                    android:id="@+id/password"
                    android:typeface="serif"/>
                </LinearLayout>
        </LinearLayout>
        <Button
            android:layout_width="274dp"
            android:layout_height="40dp"
            android:text="Sign Up"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/submit_button"
            android:textSize="14dp"
            android:layout_marginTop="10dp"
            android:textColor="@drawable/submit_button_text"
            android:id="@+id/signUpButton"/>
        <LinearLayout
            android:layout_width="274dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center_horizontal|center_vertical"
            android:layout_marginTop="10dp">
            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:background="@drawable/error_icon"
                android:gravity="center_vertical"
                android:layout_marginRight="10dp"
                android:visibility="invisible"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="This is an error message"
                android:gravity="center_vertical"
                android:textColor="#cacaca"
                android:typeface="serif"
                android:textSize="10dp"
                android:visibility="invisible"
                android:layout_marginTop="3dp"/>
            </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center_horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sign up with"
            android:layout_gravity="center_horizontal|center_vertical"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textSize="10dp"
            android:layout_marginBottom="10dp"
            android:textColor="#cacaca"
            android:typeface="serif"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:background="@drawable/facebook_button"
                android:layout_gravity="center_horizontal|center_vertical"
                android:gravity="center_horizontal"
                android:clickable="true"
                android:id="@+id/facebookBgButton"
                android:onClick="facebookButton">

                <ImageView
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:background="@drawable/facebook_icon"
                    android:layout_gravity="center_horizontal|center_vertical"
                    android:drawingCacheQuality="high"
                    android:clickable="true"
                    android:id="@+id/facebookButton"
                    android:onClick="facebookButton"/>

            </LinearLayout>


            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:background="@drawable/twitter_button"
                android:layout_gravity="center_horizontal|center_vertical"
                android:gravity="center_horizontal"
                android:clickable="true"
                android:id="@+id/twitterBgButton"
                android:onClick="twitterButton">

                <ImageView
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:layout_gravity="center_horizontal|center_vertical"
                    android:background="@drawable/twitter_icon"
                    android:drawingCacheQuality="high"
                    android:clickable="true"
                    android:id="@+id/twitterButton"
                    android:onClick="twitterButton"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>