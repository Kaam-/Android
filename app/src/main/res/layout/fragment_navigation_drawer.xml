<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/navigation_drawer_width"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#2b2b2b"
    android:id="@+id/profile_layout"
    android:layout_gravity="center_vertical"
    android:gravity="center_vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:minHeight="50dp"
        android:gravity="center_horizontal|center_vertical"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="120sp"
            android:layout_height="120sp"
            android:background="@drawable/profile_picture_circle"
            android:gravity="center_horizontal"
            android:layout_margin="10dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/name"
            android:text="Andrew Rubiano"
            android:gravity="center_horizontal"
            android:textSize="14sp"
            android:textColor="#ffffff"
            android:typeface="serif"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/status"
            android:text="Status of the person goes here"
            android:gravity="center_horizontal"
            android:textSize="10sp"
            android:textColor="#bebebe"
            android:typeface="serif"
            />

        </LinearLayout>

    <!--<ListView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:choiceMode="singleChoice"
        android:divider="@android:color/transparent"
        android:dividerHeight="0dp"
        tools:context="com.Goals.Test.NavigationDrawerFragment"
        android:layout_weight="2"
        android:id="@+id/navigationOptions"/>-->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:layout_gravity="left|bottom"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:background="@drawable/profile_button"
                android:orientation="horizontal"
                android:padding="10dp"
                android:gravity="center_vertical|center_horizontal"
                android:clickable="true"
                android:layout_marginTop="20dp">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:background="@drawable/stream_icon"
                    android:layout_marginRight="10dp"
                    android:gravity="center_vertical|center_horizontal"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="Achievement Stream"
                    android:textColor="@drawable/profile_button_text"
                    android:textSize="12sp"
                    android:id="@+id/achievementStream"
                    android:gravity="left|center_vertical"
                    android:layout_weight="5"
                    android:typeface="serif"/>
                <Button
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:background="@drawable/notification_square"
                    android:layout_marginLeft="10dp"
                    android:gravity="center_vertical|center_horizontal"
                    android:visibility="visible"
                    android:id="@+id/achievementStreamNotifications"
                    android:clickable="false"
                    android:text="14"
                    android:textSize="12sp"
                    android:textColor="#ffffff"
                    android:typeface="serif"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:background="@drawable/profile_button"
                android:orientation="horizontal"
                android:padding="10dp"
                android:gravity="center_vertical|center_horizontal"
                android:clickable="true">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:background="@drawable/task_manager_icon"
                    android:layout_marginRight="10dp"
                    android:gravity="center_vertical|center_horizontal"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="Task Manager"
                    android:textColor="@drawable/profile_button_text"
                    android:textSize="12sp"
                    android:id="@+id/achievementStream"
                    android:gravity="left|center_vertical"
                    android:layout_weight="5"
                    android:typeface="serif"/>
                <Button
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:background="@drawable/notification_square"
                    android:layout_marginLeft="10dp"
                    android:gravity="center_vertical|center_horizontal"
                    android:visibility="visible"
                    android:id="@+id/TaskManagerNotifications"
                    android:clickable="false"
                    android:text="8"
                    android:textSize="12sp"
                    android:textColor="#ffffff"
                    android:typeface="serif"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:background="@drawable/profile_button"
                android:orientation="horizontal"
                android:padding="10dp"
                android:gravity="center_vertical|center_horizontal"
                android:clickable="true">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:background="@drawable/progress_tracker_icon"
                    android:layout_marginRight="10dp"
                    android:gravity="center_vertical|center_horizontal"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:textAlignment="gravity"
                    android:text="Progress Tracker"
                    android:textColor="@drawable/profile_button_text"
                    android:textSize="12sp"
                    android:id="@+id/achievementStream"
                    android:gravity="left|center_vertical"
                    android:layout_weight="5"
                    android:typeface="serif"/>
                <Button
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:background="@drawable/notification_square"
                    android:layout_marginLeft="10dp"
                    android:gravity="center_vertical|right"
                    android:visibility="invisible"
                    android:id="@+id/ProgressTrackerNotifications"
                    android:clickable="false"
                    android:text="14"
                    android:textSize="12sp"
                    android:textColor="#ffffff"
                    android:typeface="serif"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:background="@drawable/profile_button"
                android:orientation="horizontal"
                android:padding="10dp"
                android:gravity="center_vertical|center_horizontal"
                android:clickable="true">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:background="@drawable/achievement_stream_icon"
                    android:layout_marginRight="10dp"
                    android:gravity="center_vertical|center_horizontal"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="Hall of Awesome"
                    android:textColor="@drawable/profile_button_text"
                    android:textSize="12sp"
                    android:id="@+id/achievementStream"
                    android:gravity="left|center_vertical"
                    android:layout_weight="5"
                    android:typeface="serif"/>
                <Button
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:background="@drawable/notification_square"
                    android:layout_marginLeft="10dp"
                    android:gravity="center_vertical|center_horizontal"
                    android:visibility="visible"
                    android:id="@+id/HallOfAwesomeNotifications"
                    android:clickable="false"
                    android:text="3"
                    android:textSize="12sp"
                    android:textColor="#ffffff"
                    android:typeface="serif"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:background="@drawable/profile_button"
                android:orientation="horizontal"
                android:padding="10dp"
                android:gravity="center_vertical|center_horizontal"
                android:clickable="true">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:background="@drawable/friends_list_icon"
                    android:layout_marginRight="10dp"
                    android:gravity="center_vertical|center_horizontal"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="Friend List"
                    android:textColor="@drawable/profile_button_text"
                    android:textSize="12sp"
                    android:id="@+id/achievementStream"
                    android:gravity="left|center_vertical"
                    android:layout_weight="5"
                    android:typeface="serif"/>
                <Button
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:background="@drawable/notification_square"
                    android:layout_marginLeft="10dp"
                    android:gravity="center_vertical|center_horizontal"
                    android:visibility="invisible"
                    android:id="@+id/FriendListNotifications"
                    android:clickable="false"
                    android:text="14"
                    android:textSize="12sp"
                    android:textColor="#ffffff"
                    android:typeface="serif"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:background="@drawable/profile_button"
                android:orientation="horizontal"
                android:padding="10dp"
                android:gravity="center_vertical|center_horizontal"
                android:clickable="true">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:background="@drawable/settings_icon"
                    android:layout_marginRight="10dp"
                    android:gravity="center_vertical|center_horizontal"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="Settings"
                    android:textColor="@drawable/profile_button_text"
                    android:textSize="12sp"
                    android:id="@+id/achievementStream"
                    android:gravity="left|center_vertical"
                    android:layout_weight="5"
                    android:typeface="serif"/>
                <Button
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:background="@drawable/notification_square"
                    android:layout_marginLeft="10dp"
                    android:gravity="center_vertical|center_horizontal"
                    android:visibility="invisible"
                    android:id="@+id/SettingsNotifications"
                    android:clickable="false"
                    android:text="14"
                    android:textSize="12sp"
                    android:textColor="#ffffff"
                    android:typeface="serif"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:background="@drawable/profile_button"
                android:orientation="horizontal"
                android:padding="10dp"
                android:gravity="center_vertical|center_horizontal"
                android:clickable="true">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:background="@drawable/sign_out_icon"
                    android:layout_marginRight="10dp"
                    android:gravity="center_vertical|center_horizontal"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="Sign out"
                    android:textColor="@drawable/profile_button_text"
                    android:textSize="12sp"
                    android:id="@+id/achievementStream"
                    android:gravity="left|center_vertical"
                    android:layout_weight="5"
                    android:typeface="serif"/>
                <Button
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:background="@drawable/notification_square"
                    android:layout_marginLeft="10dp"
                    android:gravity="center_vertical|center_horizontal"
                    android:visibility="invisible"
                    android:id="@+id/SignOutNotifications"
                    android:clickable="false"
                    android:text="14"
                    android:textSize="12sp"
                    android:textColor="#ffffff"
                    android:typeface="serif"/>
            </LinearLayout>

            </LinearLayout>

    </LinearLayout>


